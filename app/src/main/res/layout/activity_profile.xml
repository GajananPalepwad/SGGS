<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <ImageView
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/round_boarder"
        android:elevation="4dp"
        android:src="@drawable/arrow"
        app:layout_constraintBottom_toBottomOf="@+id/signUpText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/signUpText" />

    <TextView
        android:id="@+id/signUpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:elevation="1dp"
        android:fontFamily="@font/rubik_bold"
        android:text="Profile"
        android:textColor="#0F254E"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:elevation="12dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:backgroundTint="#66FF3C00"
        android:thicknessRatio="1.9"
        app:cardCornerRadius="180dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signUpText">

        <androidx.cardview.widget.CardView
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:elevation="12dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            app:cardCornerRadius="180dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/profile"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:src="@drawable/boy1" />

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/fullname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/textviewbackground"
        android:backgroundTint="#FFC9D3"
        android:elevation="1dp"
        android:fontFamily="sans-serif"
        android:hint="Full Name"
        android:drawableLeft="@drawable/name_icon"
        android:drawablePadding="10dp"
        android:inputType="text"
        android:paddingHorizontal="20dp"
        android:textAlignment="textStart"
        android:textColorHint="#75040303"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView2" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/textviewbackground"
        android:backgroundTint="#FFF3AF"
        android:elevation="1dp"
        android:focusable="false"
        android:fontFamily="sans-serif"
        android:hint="College Email"
        android:drawableLeft="@drawable/email_icon"
        android:drawablePadding="10dp"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="20dp"
        android:textAlignment="textStart"
        android:textColorHint="#75040303"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullname" />

    <EditText
        android:id="@+id/regnum"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/textviewbackground"
        android:backgroundTint="#FFEBC5"
        android:elevation="1dp"
        android:fontFamily="sans-serif"
        android:hint="Registration Number"
        android:drawableLeft="@drawable/reg_icon"
        android:drawablePadding="10dp"
        android:inputType="none"
        android:paddingHorizontal="20dp"
        android:textAlignment="textStart"
        android:textColorHint="#75040303"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <EditText
        android:id="@+id/mobile_num"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/textviewbackground"
        android:backgroundTint="#C9F5FF"
        android:elevation="1dp"
        android:fontFamily="sans-serif"
        android:hint="Mobile Number"
        android:inputType="number"
        android:drawableLeft="@drawable/call_icon"
        android:drawablePadding="10dp"
        android:paddingHorizontal="20dp"
        android:textAlignment="textStart"
        android:textColorHint="#75040303"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regnum" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/textviewbackground"
        android:backgroundTint="#DCFFC9"
        android:elevation="1dp"
        android:fontFamily="sans-serif"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingHorizontal="20dp"
        android:textAlignment="textStart"
        android:textColorHint="#75040303"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mobile_num" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/textviewbackground"
        android:backgroundTint="#C9DBFF"
        android:elevation="10dp"
        android:fontFamily="sans-serif"
        android:hint="Log Out"
        android:inputType="textPassword"
        android:paddingHorizontal="20dp"
        android:textAlignment="textStart"
        android:textColorHint="#75040303"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:text="Made by Team SWAG"
        android:onClick="web"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>